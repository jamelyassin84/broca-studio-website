# top-most EditorConfig file
root = true

# Applies to all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default indentation to 4 spaces for all files
[*.js]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

# Disable trimming whitespace for Markdown files
[*.md]
trim_trailing_whitespace = false

# JavaScript and TypeScript files
[*.js]
max_line_length = 120

[*.ts]
max_line_length = 120

# Python files
[*.py]
indent_style = space
indent_size = 4

# Ignore certain directories
[**/node_modules/**]
ignore = true

[**/dist/**]
ignore = true
